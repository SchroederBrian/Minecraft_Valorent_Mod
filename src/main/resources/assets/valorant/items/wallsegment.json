{
	"model": {
	  "type": "minecraft:select",
	  "property": "minecraft:display_context",
	  "cases": [
		{
		  "when": ["gui", "ground", "fixed"],
		  "model": { "type": "minecraft:model", "model": "valorant:item/blaze_gui" }
		},
		{
		  "when": "firstperson_righthand",
		  "model": { "type": "minecraft:model", "model": "valorant:item/blaze_hand_3d" }
		},
		{
		  "when": "thirdperson_righthand",
		  "model": { "type": "minecraft:model", "model": "minecraft:item/air" }
		}
	  ],
	  "fallback": { "type": "minecraft:model", "model": "valorant:item/blaze_3d" }
	}
  }
  